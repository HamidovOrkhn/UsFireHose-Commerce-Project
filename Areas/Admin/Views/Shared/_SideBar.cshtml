                    </a>
                </li>
                <li class="@(controllerName == "setting" ? "active" : "")">
                    <a href="/admin/setting">
                        <i class="material-icons">settings</i>
                        <span>Settings</span>
                    </a>
                </li>
                <li class="@(controllerName == "filemanager" ? "active" : "")">
                    <a href="/admin/filemanager">
                        <i class="material-icons">collections</i>
                        <span>File Manager</span>
                    </a>
                </li>
                <li class="@(controllerName == "user" ? "active" : "")">
                    <a href="/admin/user">
                        <i class="material-icons">assignment_ind</i>
                        <span>Users</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- #Menu -->
        <!-- Footer -->
        <div class="legal">
            <div class="copyright">
                &copy; 2022 <a href="">US Fire Hose</a>.
            </div>
            <div class="version">
                <b>Version: </b> 1.0.0
            </div>
        </div>
        <!-- #Footer -->
    </aside>
    <!-- #END# Left Sidebar -->
</section>