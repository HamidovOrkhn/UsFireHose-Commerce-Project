 @inject IGeneralRepository _generalRepository
@{
    ContactUs contact = await _generalRepository.GetContactUs();
    Dictionary<string, string> settings = await _generalRepository.GetSettings();
}
<!-- Begin Uren's Footer Area -->
<div class="uren-footer_area">
    <div class="footer-middle_area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4">
                    <div class="footer-widgets_info">
                        <div class="footer-widgets_logo">
                            <a href="#">
                                <img src="@settings?["footer_logo_image"]?" alt="Uren's Footer Logo">
                            </a>
                        </div>
                        <div class="widget-short_desc">
                            @Html.Raw(contact?.Description)
                        </div>
                        <div class="widgets-essential_stuff">
                            <ul>
                                <li class="uren-address">
                                    <span>Address:</span> The Barn,
                                    Ullenhall, Henley
                                    in
                                    Arden B578 5CC, England
                                </li>
                                <li class="uren-phone">
                                    <span>
                                        Call
                                        Us:
                                    </span> <a href="tel://@contact?.MainPhone">@contact?.MainPhone</a>
                                </li>
                                <li class="uren-email"><span>Email:</span> <a href="mailto://@contact?.MainEmail">@contact?.MainEmail</a></li>
                            </ul>
                        </div>
                        <div class="uren-social_link">
                            <ul>
                                <li class="facebook">
                                    <a href="https://www.facebook.com/" data-toggle="tooltip" target="_blank" title="Facebook">
                                        <i class="fab fa-facebook"></i>
                                    </a>
                                </li>
                                <li class="twitter">
                                    <a href="https://twitter.com/" data-toggle="tooltip" target="_blank" title="Twitter">
                                        <i class="fab fa-twitter-square"></i>
                                    </a>
                                </li>
                                <li class="google-plus">
                                    <a href="https://www.plus.google.com/discover" data-toggle="tooltip" target="_blank" title="Google Plus">
                                        <i class="fab fa-google-plus"></i>
                                    </a>
                                </li>
                                <li class="instagram">
                                    <a href="https://instagram.com/" data-toggle="tooltip" target="_blank" title="Instagram">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="footer-widgets_area">
                        <div class="row">
                            <div class="col-lg-3 col-md-6">
                                <div class="footer-widgets_title">
                                    <h3>Information</h3>
                                </div>
                                <div class="footer-widgets">
                                    <ul>
                                        <li><a href="/about-us">About Us</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="footer-widgets_title">
                                    <h3>Customer Service</h3>
                                </div>
                                <div class="footer-widgets">
                                    <ul>
                                        <li><a href="/contact-us">Contact Us</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="footer-widgets_title">
                                    <h3>Extras</h3>
                                </div>
                                <div class="footer-widgets">
                                    <ul>
                                        <li><a href="/products">Shop</a></li>
                                        <li><a href="/blogs">Blogs</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>