@{
    Dictionary<string, string>? settings = (Dictionary<string, string>?)ViewData["Settings"];
}
@model AboutUs;
<!-- Begin Uren's Breadcrumb Area -->
<div style="background-image: url(@settings?["about_us_cover_image"]?);" class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <h2>About Us</h2>
            <ul>
                <li><a href="/">Home</a></li>
                <li class="active">About Us</li>
            </ul>
        </div>
    </div>
</div>
<!-- Uren's Breadcrumb Area End Here -->
<!-- Begin Uren's About Us Area -->
<div class="about-us-area mb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-md-5">
                <div class="overview-img text-center img-hover_effect">
                    <a href="#">
                        <img class="img-full" src="@Model?.ImagePath" alt="Uren's About Us Image">
                    </a>
                </div>
            </div>
            <div class="col-lg-6 col-md-7 d-flex align-items-center">
                <div class="overview-content">
                    <h2>@Model?.Title</h2>
                    @Html.Raw(Model?.Description)
                    <div class="uren-about-us_btn-area">
                        <a class="about-us_btn" href="/products">Shop Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Uren's About Us Area End Here -->